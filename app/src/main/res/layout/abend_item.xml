<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/size_8dp"
    android:layout_marginBottom="@dimen/size_8dp"
    android:paddingBottom="@dimen/size_8dp"
    android:paddingTop="@dimen/size_8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/ab_ed_sportsman"
        android:text="Спортсмен"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/ab_ed_ab"
        android:text="Абонемент"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ab_ed_start_date"
            android:text="c даты"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/ab_ed_end_date"
            android:text="по дата"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/ab_ed_training_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/ab_ed_type_rec"
        android:textColor="@android:color/black"
        android:text="Причина попадания в отчет"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>